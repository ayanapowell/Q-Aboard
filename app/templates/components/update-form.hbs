{{#if updatePostForm}}
  <form id="update" class=" well hidden-form col-md-12">
    <div class="form-group">
      {{input value=username id="username" placeholder="choose a username" class="form-control"}}
    </div>
    <div class="form-group">
      {{input value=title id="title" placeholder="title" class="form-control"}}
    </div>
    <div class="form-group">
      {{textarea class="form-control" value=content id="content" placeholder="content"}}
    </div>
    <button class="fluid ui button col-md-12" {{action 'update' post}}>Save</button>
  </form>
{{else}}
  <p class="col-sm-4"{{action 'updatePostForm' post}}><i class="edit icon"></i>Edit post</p>
{{/if}}
